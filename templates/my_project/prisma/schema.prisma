generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Region {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  prefectureCode String
  latitude  Float
  longitude Float
  description String?
  products  Product[]
  landmarks Landmark[]
  terrains  Terrain[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  regionId  Int
  productionAmount Float?
  ranking   Int?
  description String?
  image     String?
  latitude  Float?
  longitude Float?
  region    Region   @relation(fields: [regionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, regionId])
}

model Landmark {
  id        Int      @id @default(autoincrement())
  name      String
  regionId  Int
  description String?
  image     String?
  latitude  Float
  longitude Float
  region    Region   @relation(fields: [regionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, regionId])
}

model Terrain {
  id        Int      @id @default(autoincrement())
  name      String
  regionId  Int
  description String?
  image     String?
  latitude  Float
  longitude Float
  region    Region   @relation(fields: [regionId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, regionId])
}
